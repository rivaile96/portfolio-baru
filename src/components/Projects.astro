---
// File: src/components/Projects.astro (Dengan Proyek Unggulan)
import ProjectCard from './ProjectCard.astro';
---
<section id="projects" class="py-20 bg-background">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-16" data-aos="fade-up">Personal Projects</h2>
    
    {/* Layout diubah menjadi 3 kolom di layar besar */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" data-aos="fade-up" data-aos-delay="200">
      
      <!-- PROYEK UNGGULAN: AI Service Management -->
      <ProjectCard
        title="AI Service Management"
        description="Sistem manajemen tiket servis full-stack dengan dashboard analitik, visualisasi data, dan integrasi AI untuk diagnosa."
        imgSrc="/projects/service-management.png"
        tech={['Laravel', 'PHP', 'JavaScript', 'Chart.js', 'AI/ML']}
        githubUrl="https://github.com/rivaile96/data-service-ticketing"
      />

      <!-- Proyek 2: NgOCR-in -->
      <ProjectCard
        title="NgOCR-in"
        description="Sebuah toolkit OCR berbasis command-line untuk lingkungan Linux/WSL yang mendukung batch processing dan terjemahan multi-bahasa."
        imgSrc="/projects/ngocr-in.jpg"
        tech={['Python', 'Tesseract', 'OpenCV', 'CLI']}
        githubUrl="https://github.com/rivaile96/NgOCR-in"
      />

      <!-- Proyek 3: PHISPYRATE_FaceVerification -->
      <ProjectCard
        title="PHISPYRATE FaceVerification"
        description="Alat simulasi otentikasi wajah berbasis web untuk pelatihan OSINT, penetration testing, dan cybersecurity."
        imgSrc="/projects/phispyrate.jpg"
        tech={['Python', 'Flask', 'MediaRecorder API', 'JavaScript']}
        githubUrl="https://github.com/rivaile96/PHISPYRATE_FaceVerification"
      />

    </div>
  </div>
</section>
