---
interface Props {
  skill: string;
  percentage: string;
}
const { skill, percentage } = Astro.props;
---
<div class="w-full mb-4">
  <div class="flex justify-between items-center mb-1">
    <span class="font-semibold text-text-primary">{skill}</span>
    <span class="text-sm text-text-secondary">{percentage}</span>
  </div>
  <div class="w-full bg-primary rounded-full h-2.5">
    <div class="bg-accent h-2.5 rounded-full" style={`width: ${percentage}`}></div>
  </div>
</div>